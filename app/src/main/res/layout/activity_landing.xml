<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nganthoi.salai.tabgen.LandingActivity">

    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:id="@+id/chat"
        android:background="@drawable/landing_chat"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:id="@+id/landing_reference"
        android:background="@drawable/landing_reference"
        android:layout_below="@+id/chat"
        android:layout_alignLeft="@+id/chat"
        android:layout_alignStart="@+id/chat" />

    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:id="@+id/landing_cme"
        android:background="@drawable/landing_cme"
        android:layout_below="@+id/landing_reference"
        android:layout_alignLeft="@+id/landing_reference"
        android:layout_alignStart="@+id/landing_reference" />

    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:id="@+id/landing_news"
        android:background="@drawable/landing_news"
        android:layout_below="@+id/landing_cme"
        android:layout_alignLeft="@+id/landing_cme"
        android:layout_alignStart="@+id/landing_cme" />

</RelativeLayout>
