<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_conversation"
    tools:context="com.nganthoi.salai.tabgen.ConversationActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatListView"
        android:layout_above="@+id/messageLayout"
        android:layout_centerHorizontal="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:paddingBottom="10dp"
        android:transcriptMode="alwaysScroll"/>
    <!-- android:fastScrollEnabled="true"-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/messageLayout"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="textMultiLine"
                android:id="@+id/messageEditText"
                android:hint="Type Your Message"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:layout_weight="0.84"
                android:layout_gravity="left"
                android:background="@drawable/msg_write_bg"
                android:layout_alignTop="@+id/chatSendButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/chatSendButton"
                android:layout_toStartOf="@+id/chatSendButton" />
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/chatSendButton"
            android:src="@android:drawable/ic_menu_send"
            android:background="@drawable/round_button_background"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>
