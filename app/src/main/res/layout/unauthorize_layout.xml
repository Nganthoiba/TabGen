<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You are not authorized to access this service. Please consult the system administrator."
        android:id="@+id/unauthorise_msg"
        android:layout_gravity="center_vertical"
        android:textSize="20sp"
        android:background="@drawable/edittext_style"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textColor="#f63939"
        android:textColorHighlight="#f9d60e"
        android:textStyle="normal|italic"
        android:typeface="serif"
        android:textAlignment="gravity"
        android:drawableLeft="@drawable/alert"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--<ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/imageView2"
        android:src="@drawable/alert"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />-->
</RelativeLayout>
