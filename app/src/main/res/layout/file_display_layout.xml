<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attachmentView"
        android:src="@drawable/attach"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="File Details"
        android:id="@+id/fileInformation"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/attachmentView"
        android:layout_toEndOf="@+id/attachmentView"
        android:layout_alignBottom="@+id/attachmentView"
        android:gravity="center_vertical"
        android:paddingLeft="5dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/downloadButton"
        android:src="@android:drawable/ic_menu_more"
        android:background="@drawable/button_blue_background"
        android:layout_alignBottom="@+id/attachmentView"
        android:layout_toLeftOf="@+id/fileInformation"
        android:layout_toStartOf="@+id/fileInformation" />
</RelativeLayout>
